@{
    List<WWW.Models.ProductInfo> ps = Model as List<WWW.Models.ProductInfo>;
}


@{
    ViewBag.Title = "購物商城首頁";
    Layout = "~/Views/Shared/main_Layout.cshtml";
}

@section MyStyle
    {
    <style>
        #ProductList {
            width: 900px;
            border-collapse: collapse;
            margin:auto;
        }

        h1 {
            text-align:center;
        }

            #ProductList td {
                padding: 10pt;
            }

        .Title {
            font-weight: bold;
            font-size: 16pt
        }

        .Header {
            font-weight: bold;
            text-align: right;
            width: 100px;
        }
    </style>
}

<h1>購物商城 首頁</h1>
<table id="ProductList">
    @foreach (var pp in ps)
    {
        <tr>
            <td style="width:150px;text-align:center;">
                <img src="data:image/gif;base64,@Convert.ToBase64String(pp.Pic)" />
            </td>
            <td>
                <table cellpadding="10">
                    <tr>
                        <td colspan="4" class="Title">@pp.Name</td>
                    </tr>
                    <tr>
                        <td class="Header">產品編號：</td>
                        <td>@pp.ID</td>
                        <td class="Header">價錢：</td>
                        <td>@pp.Price</td>
                    </tr>
                    <tr>
                        <td class="Header">單位數量：</td>
                        <td>@pp.Unit</td>
                        <td class="Header">庫存量：</td>
                        <td>@pp.Stock</td>
                    </tr>
                    <tr>
                        <td class="Header">供應商：</td>
                        <td>@pp.SupplyName</td>
                        <td class="Header">產品類別：</td>
                        <td>@pp.TypeName</td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            @if (pp.Stock > 0)
                            {
                                <a href="@Url.Action("AddToCart", new { pid = pp.ID })">
                                    <img src="~/img/shops/cart_add.png" title="加入購物車" />
                                </a>
                            }
                            else
                            {
                                <img src="~/img/shops/sold-out(s).png" title="已售完" />
                            }
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    }
</table>
<p>&nbsp;</p>
<p style="text-align:center">@Html.Raw(ViewData["PageLink"])</p>
<p>&nbsp;</p>
<p>&nbsp;</p>